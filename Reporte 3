tiempo:
movlw d'3'
movwf i
movlw d'83' 
movwf j
movlw d'138'
movwf k
Contando2
Contando1
Contando
 DECFSZ j,f
 GOTO Contando


 DECFSZ k,f
 GOTO Contando1
 
 DECFSZ i,f
 GOTO Contando2
 
 
 return

			
